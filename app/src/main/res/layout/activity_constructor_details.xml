<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/construction_imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/road_construction"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--card first name-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_firstName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@+id/construction_imageView"
                app:layout_constraintStart_toStartOf="parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:text="First Name"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tvConstructorFirstName"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Joesta"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="160dp" />


            </androidx.cardview.widget.CardView>

            <!--card last name-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_lastName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/card_firstName"
                app:layout_constraintStart_toStartOf="parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Last Name"
                    android:fontFamily="serif"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tvConstructorLastName"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Sebolela"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="160dp" />

            </androidx.cardview.widget.CardView>

            <!--card cell number-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_cellNumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/card_lastName"
                app:layout_constraintStart_toStartOf="parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Cell Number"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tvConstructorCellNumber"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="063 144 2166"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="160dp" />

            </androidx.cardview.widget.CardView>

            <!--card email number-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_constructor_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/card_cellNumber"
                app:layout_constraintStart_toStartOf="parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Email"
                    android:fontFamily="serif"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tvConstructorEmail"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Joestax@icloud.com"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="160dp" />
            </androidx.cardview.widget.CardView>

            <!--card email number-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_constructor_status"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="10dp"
                app:layout_constraintTop_toBottomOf="@id/card_constructor_email"
                app:layout_constraintStart_toStartOf="parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text="Status"
                    android:fontFamily="serif"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="5dp"
                    android:textSize="16sp"
                    android:textColor="#555" />

                <TextView
                    android:id="@+id/tvConstructorStatus"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Available"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="#555"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="160dp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

        <include layout="@layout/bottom_sheet" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>